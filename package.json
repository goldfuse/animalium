{
  "private": true,
  "author": "Jorrit Duin <jorrit>",
  "name": "bejeweled",
  "description": "Bejeweled",
  "version": "0.1",
  "main": "index.html",
  "chromium-args": "--ignore-certificate-errors",
  "window": {
    "title": "Bejeweled",
    "toolbar": false,
    "width": 820,
    "height": 620,
    "min_width": 320,
    "min_height": 500,
    "frame" : true,
    "icon": "icon-128x128.png"
  },
  "license": "UNLICENSED",
  "eslintConfig": {
    "rules": {
      "indent": [
        2,
        2
      ],
      "quotes": [
        2,
        "single"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ]
    },
    "env": {
      "es6": true,
      "browser": true,
      "amd" : true
    },
    "extends": "eslint:recommended",
    "plugins": [
      "security"
    ]
  }
}
